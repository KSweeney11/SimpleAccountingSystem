<Application x:Class="SimpleAccountingSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimpleAccountingSystem"
             StartupUri="Dashboard.xaml">
  <Application.Resources>
    <Style x:Key="defaultStyle" TargetType="Window">
      <Setter Property="WindowStyle" Value="ToolWindow" />
      <Setter Property="Background" Value="#FF6E6E6E" />
      <Setter Property="FontFamily" Value="Rockwell" />
      <Setter Property="FontSize" Value="12" />
      <Setter Property="ResizeMode" Value="CanMinimize" />
      <Setter Property="HorizontalAlignment" Value="Center" />
      <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style x:Key="currencyStyle" TargetType="{x:Type DataGridCell}">
      <Setter Property="HorizontalContentAlignment" Value="Right" />
      <Setter Property="ContentStringFormat" Value="$#,##0.00" />
    </Style>
  </Application.Resources>
</Application>